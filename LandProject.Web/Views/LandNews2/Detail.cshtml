<div class="container padding-top-custom-devive">
    <div class="row">
        <div class="col-xs-12">
            <div class="row">

                <div class="col-md-10 col-sm-8 col-xs-12 nav-title">
                    <h1>
                        @Model.LandNewsDetail.Title
                    </h1>
                    <span>
                        
                    </span>
                </div><div class="col-md-2 col-sm-4 col-xs-12 nav-page">
                    <div class="row">
                        <div class="pull-left">

                        </div>
                        <div class="pull-right">
                        </div>
                    </div>
                </div>
            </div>
        </div>
