<div class="container main bs-docs-container">
    <div class="row" role="main">
        <div class="container">       
               
            <div class="row">
                <div class="col-xs-12 padding-top-custom-devive">
                    <div style="float: left">
                        <span id="MainContent_ctlDetailBox_lblPrice" class="price">@Model.LandNewsDetail.TotalPrice VNĐ</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 col-xs-12">
                    <!-- Address and Sidle pictures -->
                    <div class="row">
                        <div class="col-sm-9 col-xs-12 padding-top-custom-devive address-advert">
                            <span id="MainContent_ctlDetailBox_lblStreet"> </span>|
                            @{ 
                                var urlProvince = "/nha-dat/" + Model.LandNewsDetail.ProvinceName + ".p-" + Model.LandNewsDetail.ProvinceID + ".html";
                                var urlDistrict = "/nha-dat/" + Model.LandNewsDetail.DistrictName + ".d-" + Model.LandNewsDetail.DistrictID + ".html";
                                var urlWard = "/nha-dat/" + Model.LandNewsDetail.WardName + ".w-" + Model.LandNewsDetail.WardID + ".html";
                            }
                            <span id="MainContent_ctlDetailBox_lblWard"><a href="@urlProvince">@Model.LandNewsDetail.ProvinceName</a></span>|
                            <span id="MainContent_ctlDetailBox_lblDistrict"><a href="@urlDistrict">@Model.LandNewsDetail.DistrictName</a></span>|
                            <span id="MainContent_ctlDetailBox_lblCity"><a href="@urlWard">@Model.LandNewsDetail.WardName</a></span>
                        </div>
                        <div class="col-xs-12 padding-top-custom-devive">
                            <div class="clearfix property-detail-flexslider">
                                <div class="flexslider">
                                    <ul class="slides">
 
                                        @if (Model.LandNewsDetail.LandFiles.Count() != 0)
                                        {
                                            foreach (var item in Model.LandNewsDetail.LandFiles)
                                            {
                                                <li data-thumb="fileman/Uploads/LandNews/@item.FileName">
                                                    <a href="fileman/Uploads/LandNews/@item.FileName" class="swipebox" title="@Model.LandNewsDetail.LandCategoryName - @Model.LandNewsDetail.Title" rel="@Model.LandNewsDetail.LandCategoryName - @Model.LandNewsDetail.Title">
                                                        <img src="fileman/Uploads/LandNews/@item.FileName" title="@Model.LandNewsDetail.LandCategoryName - @Model.LandNewsDetail.Title" alt="@Model.LandNewsDetail.LandCategoryName - @Model.LandNewsDetail.Title" />
                                                    </a>
                                                </li>
                                            }
                                        }

                                    </ul>
                                </div>
                            </div>
                            <div class="col-xs-12 id-date">
                                <div class="row">
                                    <div class="col-sm-4 col-xs-12">
                                        Mã tin đăng:
                                        <span id="MainContent_ctlDetailBox_lblId">@Model.LandNewsDetail.Code</span>
                                    </div>
                                    <div class="col-sm-8 col-xs-12 date-listing-detail">
                                        Ngày đăng:
                                        <span id="MainContent_ctlDetailBox_lblDateCreated">@(Model.LandNewsDetail.PublishedDate != null ? Model.LandNewsDetail.PublishedDate.Value.ToString("dd/MM/yyyy") : "")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Main attributes and Description -->
                    <div class="row padding-top-20 main-attribute-area">
                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-12 title-detail-page">
                                    <div class="pull-left">Đặc điểm chính </div>
                                    <div class="pull-left margin-left-2">
                                        <h3 class="seo-category-detail-page"></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="row padding-top-10">
                                <div class="col-sm-6 col-xs-12">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th class="col-xs-5">Tình trạng pháp lý</th>
                                            <td class="col-xs-7">
                                                <span id="MainContent_ctlDetailBox_lblLegalStatus">@Model.LandNewsDetail.LegalStatus </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Diện tích</th>
                                            <td>
                                                <span id="MainContent_ctlDetailBox_lblSurface">@Model.LandNewsDetail.Area m²</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Đường trước nhà</th>
                                            <td>
                                                <span id="MainContent_ctlDetailBox_lblFrontRoadWidth">@Model.LandNewsDetail.Entry m</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Hướng</th>
                                            <td>
                                                <span id="MainContent_ctlDetailBox_lblFengShuiDirection">@Model.LandNewsDetail.HouseDirection</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Số tầng</th>
                                            <td>
                                                <span id="MainContent_ctlDetailBox_lblFloor">@Model.LandNewsDetail.NumberFloor</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Phòng ngủ</th>
                                            <td>
                                                <span id="MainContent_ctlDetailBox_lblBedRoom">@Model.LandNewsDetail.NumberBedroom</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Phòng tắm</th>
                                            <td>
                                                <span id="MainContent_ctlDetailBox_lblBathRoom">@Model.LandNewsDetail.NumberWC</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Thuộc dự án</th>
                                            <td class="project-link">
                                                <span id="MainContent_ctlDetailBox_lblProject"><a href='/du-an-nha-o-3602/galaxy-hai-son-8547202'>@Model.LandNewsDetail.LProjectName  </a></span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th>Tiện ích</th>
                                            <td>
                                                <span id="MainContent_ctlDetailBox_lblUtility">
                                                    @if (!String.IsNullOrEmpty(Model.LandNewsDetail.Convenient))
                                                    {
                                                        var arrContient = Model.LandNewsDetail.Convenient.Split(',');
                                                        foreach(var item in arrContient)
                                                        {
                                                            @(item+"<br />");
                                                        }
                                                    }
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Môi trường xung quanh</th>
                                            <td>
                                                <span id="MainContent_ctlDetailBox_lblEnvironment">
                                                    @if (!String.IsNullOrEmpty(Model.LandNewsDetail.Environment))
                                                    {
                                                        var arrEnvironment = Model.LandNewsDetail.Environment.Split(',');
                                                        foreach (var item in arrEnvironment)
                                                        {
                                                            @(item + "<br />");
                                                        }
                                                    }
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Detail Description -->
                    <div class="row description-area">
                        <div class="col-xs-12 title-detail-page">
                            <div class="pull-left">Mô tả chi tiết</div>
                            <div class="pull-left margin-left-2">
                                <h3 class="seo-category-detail-page"></h3>
                            </div>
                        </div>
                        <div class="col-xs-12 padding-top-10">
                            <div class="box-description" id="Description">
                                @Html.Raw(Model.LandNewsDetail.Description)
                            </div>
                        </div>
                        <div class="col-xs-12 padding-top-10 padding-bottom-10">
                            <span id="external_link"></span>
                        </div>
                    </div>


                    <div class="row advertise-area">
                        <div class="col-xs-12">
                            <!-- VnExperss URL -->
                            <span id="vne_external_link"></span>
                        </div>
