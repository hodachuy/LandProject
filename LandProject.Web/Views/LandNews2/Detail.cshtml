            <div class="col-lg-10 col-md-8 hidden-md hidden-sm hidden-xs">
                <ol class="breadcrumb">
                    <li>
                        <a href="/" itemprop="url">
                            <p class="cusp" itemprop="title">Trang chủ</p> >
                        </a>
                    </li>
                    <li>
                        <a href="@urlLandType" itemprop="url">
                            <p class="cusp" itemprop="title">@Model.LandNewsDetail.LandTypeName</p>
                        </a>
                    </li>                
