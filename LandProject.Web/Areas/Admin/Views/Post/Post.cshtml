
@{
    ViewBag.Title = "Post";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
      @@media (min-width: 768px) {
        .modal-dialog.as-container {
            width: 750px;
        }
    }

    @@media (min-width: 992px) {
        .modal-dialog.as-container {
            width: 970px;
        }
    }

    @@media (min-width: 1200px) {
        .modal-dialog.as-container {
            width: 1250px;
        }
    }

    .modal-dialog.as-container .modal-content {
        float: none;
        margin: auto;
    }
    .panel_toolbox > li {
        float: right;
        cursor: pointer;
    }
        .thumbnail .image {
    height: auto;
    overflow: hidden;
}
</style>

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Tạo tin tức</h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group" style="float:right">
                    <a class="btn btn-primary" id="form-create-post">
                        Thêm
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="x_panel">
        <div class="x_title">
            <small>Trang chủ</small> / <small>Tin tức</small>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br />
            @*<h4>Horizontal labels</h4>
                <p class="font-gray-dark">
                    Using the grid system you can control the position of the labels. The form example below has the <b>col-md-10</b> which sets the width to 10/12 and <b>center-margin</b> which centers it.
                </p>*@
            <div id="grid"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="PostModel" role="dialog">
    <div class="modal-dialog as-container">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm tin tức</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <br />
                                <form class="form-horizontal form-label-left input_mask">
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                            Tên mục bài viết: <span class="required">*</span>
                                        </label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            <textarea id="txtPostName" class="form-control" rows="3" placeholder="Tiêu đề"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Loại bài tin: <span class="required">*</span></label>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            <div class="w100 form-control" id="cboPostCategory"></div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>MÔ TẢ NGẮN</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <textarea id="txtDescription" style="width:100%;height:100px"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>NỘI DUNG</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <textarea id="txtContent" class="editorTinyMce" style="width:100%;height:200px"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>HÌNH ẢNH ĐẠI DIỆN</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <input type="file" id="multi-file"/>
                                <div class="row" id="lst-file-image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="savePost">Lưu</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" id="closePost">Đóng</button>
            </div>
        </div>

    </div>
</div>

@section footerJS{
    <script src="~/assets/admin/js/Post.js"></script>
}
